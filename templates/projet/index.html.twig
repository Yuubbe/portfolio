{% extends '/index/index.html.twig' %}

{% block title %}Veille Technologique et Projets{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/presentation.css') }}">
    <link rel="stylesheet" href="{{ asset('css/bouton.css') }}">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:wght@300;400;600;700&display=swap" rel="stylesheet">
    <style>
        /* Veille */
        .rss-articles {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 20px;
        }

        .rss-card {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease-in-out;
        }

        .rss-card:hover {
            transform: translateY(-5px);
        }

        .rss-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .rss-card-content {
            padding: 15px;
        }

        .rss-title {
            font-size: 1.2rem;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
            text-decoration: none;
        }

        .rss-description {
            font-size: 0.9rem;
            color: #555;
            margin-bottom: 10px;
        }

        .rss-date {
            font-size: 0.8rem;
            color: #777;
        }

        /* Projets */
        .project-list {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
            gap: 20px;
            margin-top: 40px;
        }

        .project-card {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.3s ease-in-out;
        }

        .project-card:hover {
            transform: translateY(-5px);
        }

        .project-card img {
            width: 100%;
            height: 200px;
            object-fit: cover;
        }

        .project-content {
            padding: 15px;
        }

        .project-title {
            font-size: 1.25rem;
            font-weight: bold;
            color: #333;
            margin-bottom: 10px;
        }

        .project-description {
            color: #555;
            font-size: 1rem;
            margin-bottom: 15px;
        }

        .project-link {
            display: inline-block;
            background: #007BFF;
            color: #fff;
            text-decoration: none;
            padding: 10px 15px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .project-link:hover {
            background: #0056b3;
        }
    </style>
{% endblock %}

{% block body %}
<div class="header">  
    <div class="header__logo">
        <img src="{{ asset('img/logo.png') }}" alt="Logo" class="logo">
    </div>
    <nav class="navbar">
        <ul class="navbar__menu">
            <li class="navbar__item"><a href="/" class="navbar__link"><i data-feather="home"></i><span>Accueil</span></a></li>
            <li class="navbar__item"><a href="/presentation" class="navbar__link"><i data-feather="message-square"></i><span>Présentation</span></a></li>
            <li class="navbar__item"><a href="/certification" class="navbar__link"><i data-feather="users"></i><span>Certifications</span></a></li>
            <li class="navbar__item"><a href="/competence" class="navbar__link"><i data-feather="folder"></i><span>Compétences</span></a></li>
            <li class="navbar__item"><a href="/veille" class="navbar__link"><i data-feather="archive"></i><span>Veille technologique</span></a></li>
            <li class="navbar__item"><a href="#projects" class="navbar__link"><i data-feather="help-circle"></i><span>Mes projets</span></a></li>
            <li class="navbar__item">
                {% if app.user %}
                    <a href="/deconnexion" class="navbar__link"><i data-feather="log-out"></i><span>Se déconnecter</span></a>
                {% else %}
                    <a href="" class="navbar__link"><i data-feather="log-in"></i><span>Se connecter</span></a>
                {% endif %}
            </li>
        </ul>
    </nav>
</div>

<h1 id="projects">Mes projets</h1>
<div class="project-list">
    <div class="project-card">
        <img src="{{ asset('img/logo.webp') }}" alt="Stage-Direct">
        <div class="project-content">
            <h2 class="project-title">Stage-Direct</h2>
            <p class="project-description">Une plateforme dédiée à la gestion des stages...</p>
            <a href="https://github.com/Yuubbe/stage-direct" target="_blank" class="project-link">Voir sur GitHub</a>
            <div style="margin-top: 10px;">
                <a href="https://drive.google.com/file/d/1535XrZGahywwMCdvWiHT7OUwq3aEuw1_/view?usp=drive_link" target="_blank" class="project-link" style="background-color: #28a745;">Doc utilisateur</a>
                <a href="https://drive.google.com/file/d/1zPS0BujAQ3HBRPM6MmeyvP0JrcVu8TZK/view?usp=drive_link" target="_blank" class="project-link" style="background-color: #17a2b8;">Doc technique</a>
                <a href="https://stage-direct.gamblin-vincent.ovh/" target="_blank" class="project-link" style="background-color: #6f42c1;">Démo</a>
            </div>
        </div>
    </div>

    <div class="project-card">
        <img src="{{ asset('img/atedi.webp') }}" alt="Atedi">
        <div class="project-content">
            <h2 class="project-title">Atedi</h2>
            <p class="project-description">Une API conçue pour communiquer avec Dolibarr...</p>
            <a href="https://github.com/Yuubbe/Atedi.2024" target="_blank" class="project-link">Voir sur GitHub</a>
            <div style="margin-top: 10px;">
                <a href="https://drive.google.com/file/d/1Dmnl-iMjb7uP4nk0pXGn420yCw_ti24O/view?usp=drive_link" target="_blank" class="project-link" style="background-color: #28a745;">Doc utilisateur</a>
                <a href="https://drive.google.com/file/d/1Iyaseynjhkb_QlUkK4VZ6EtEQMDdLiAo/view?usp=drive_link" target="_blank" class="project-link" style="background-color: #17a2b8;">Doc technique</a>
            </div>
        </div>
    </div>

    <div class="project-card">
        <img src="{{ asset('img/Dolibarr_logo.jpg') }}" alt="Dolibarr">
        <div class="project-content">
            <h2 class="project-title">Dolibarr</h2>
            <p class="project-description">Un module personnalisé pour Dolibarr, conçu pour optimiser les processus internes...</p>
            <a href="https://github.com/Yuubbe/dolibarr_projet" target="_blank" class="project-link">Voir sur GitHub</a>
            <div style="margin-top: 10px;">
                <a href="https://drive.google.com/file/d/19AKuM9cvVj7qOSFRwjxU92Qij-Gqri-B/view?usp=sharing" target="_blank" class="project-link" style="background-color: #28a745;">Doc utilisateur</a>
                <a href="https://drive.google.com/file/d/1O46sqQxsAX0vTym0imTdOybQ3EMvpvBN/view?usp=drive_link" target="_blank" class="project-link" style="background-color: #17a2b8;">Doc technique</a>
            </div>
        </div>
    </div>

    <div class="project-card">
        <div class="project-content">
            <h2 class="project-title">R.E.I</h2>
            <p class="project-description">Un registre d'accès, d'impression et d'emprunt pour la base navale de Cherbourg.</p>
            <a href="https://github.com/Yuubbe/R.E.I" target="_blank" class="project-link">Voir sur GitHub</a>
            <div style="margin-top: 10px;">
                <a href="https://drive.google.com/file/d/1xLGQDZw67X5MN7OVF3A5QYhj5lhk74-A/view?usp=drive_link" target="_blank" class="project-link" style="background-color: #28a745;">Documentations</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    <script src="https://unpkg.com/feather-icons"></script>
    <script>
        feather.replace();
    </script>
{% endblock %}
